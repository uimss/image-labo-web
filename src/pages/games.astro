---
import PageLayout from '../layouts/_page.astro';

interface Game {
  title: string;
  image: string;
  isFeatured: boolean;
  isDirection: boolean;
  url: string;
  role?: string;
  release: string;
  platform: string;
  genre: string;
}

const games: Game[] = [
  {
    title: 'Recolit',
    image: 'recolit.png',
    isFeatured: true,
    isDirection: true,
    url: '/recolit/',
    release: '2024.2.16',
    genre: 'アドベンチャー',
    platform: 'Steam, Nintendo Switch, itch.io, BOOTH',
  },
  {
    title: 'わだつみのこだま',
    image: 'resonance_of_the_ocean.png',
    isFeatured: true,
    isDirection: true,
    url: 'https://store.steampowered.com/app/2057080/_/',
    release: '2022.7.9',
    genre: 'アドベンチャー',
    platform: 'Steam, itch.io, BOOTH',
  },
  {
    title: 'トルービズの秘薬師',
    image: 'trubiz.png',
    isFeatured: true,
    isDirection: false,
    role: 'グラフィック担当',
    url: 'https://store.steampowered.com/app/4083190/_/',
    release: '2025.11.6',
    genre: 'パズル',
    platform: 'Steam',
  },
  {
    title: 'ステラーコード',
