---
import BaseLayout from '../layouts/_base.astro';
import Logo from '../assets/images/logo.svg';
import { navLinks } from '../data/navLinks';
---

<style lang="scss">
  .layout-index {
    max-width: 800px;
    padding: 3rem;
    margin: auto;
    text-align: center;
  }
</style>

<BaseLayout class="layout-index">
  <header>
    <h1><Logo width={300} aria-label="Image Labo" fill="currentColor" /></h1>
    <p>taiyaki shimesaba onsen town</p>
  </header>
  <main>
    <ul>
      {
        navLinks.map((link) => (
          <li>
            <a href={link.url}>{link.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
