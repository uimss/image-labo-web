---
import BaseLayout from '../layouts/_base.astro';
import Logo from '../assets/images/logo.svg';

const Links = [
  { href: './about', title: 'About' },
  { href: './illustrations', title: 'Illustrations' },
  { href: './games', title: 'Games' },
  { href: 'https://uimss.booth.pm/', title: 'Shop' },
];

const { title } = Astro.props;
---

<style lang="scss">
  .layout-page {
    max-width: 800px;
    padding: 3rem;
    margin: auto;
    text-align: center;
  }
  header {
    margin-bottom: 2rem;
  }

  nav ul {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }
</style>

<BaseLayout title={title} class="layout-page">
  <header>
    <a href="/"><Logo width={200} aria-label="Image Labo" fill="currentColor" /></a>
    <nav>
      <ul>
        {
          Links.map((link) => (
            <li>
              <a href={link.href}>{link.title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </header>
  <main>
    <slot />
  </main>
</BaseLayout>
